# Test Environment Configuration
# This file contains environment variables for testing
# DO NOT commit sensitive data - use placeholder values

# Node Environment
NODE_ENV=test

# Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_NAME=jaqedu_test
TEST_DB_USER=test_user
TEST_DB_PASS=test_pass

# Redis Configuration
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6380
TEST_REDIS_DB=1

# API Configuration
TEST_API_URL=http://localhost:3001
TEST_WS_URL=ws://localhost:3001

# Authentication
JWT_SECRET=test-secret-key-for-jwt-tokens-only-for-testing
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=test-refresh-secret-key-for-testing
REFRESH_TOKEN_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=test-encryption-key-32-chars-long
SALT_ROUNDS=10

# File Upload (Test)
UPLOAD_DIR=./tests/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Email (Test - Mock)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASS=test_password
FROM_EMAIL=noreply@jaqedu.test

# External APIs (Test/Mock)
STRIPE_PUBLISHABLE_KEY=pk_test_example
STRIPE_SECRET_KEY=sk_test_example
STRIPE_WEBHOOK_SECRET=whsec_test_example

# AWS/S3 (Test/Mock)
AWS_ACCESS_KEY_ID=test_access_key
AWS_SECRET_ACCESS_KEY=test_secret_key
AWS_REGION=us-east-1
S3_BUCKET=jaqedu-test-bucket

# Social Authentication (Test)
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret
GITHUB_CLIENT_ID=test_github_client_id
GITHUB_CLIENT_SECRET=test_github_client_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=test-session-secret-key-for-testing
SESSION_TIMEOUT=3600000

# Logging
LOG_LEVEL=error
LOG_FILE=./tests/logs/test.log

# Performance Testing
PERF_MAX_RESPONSE_TIME=500
PERF_MAX_MEMORY_USAGE=104857600
PERF_MAX_CPU_USAGE=80

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Test-specific Configuration
TEST_TIMEOUT=10000
TEST_RETRIES=2
TEST_PARALLEL_JOBS=4
ENABLE_TEST_COVERAGE=true
COVERAGE_THRESHOLD=80

# Mock Services
USE_MOCK_SERVICES=true
MOCK_PAYMENT_GATEWAY=true
MOCK_EMAIL_SERVICE=true
MOCK_FILE_STORAGE=true

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_ANALYTICS=false
ENABLE_MONITORING=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# SSL/TLS (Disabled for tests)
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100
