{
  "name": "SPARC Development Modes",
  "version": "2.0.0",
  "modes": {
    "spec": {
      "name": "Specification",
      "command": "sparc spec",
      "description": "Requirements analysis and specification"
    },
    "architect": {
      "name": "Architecture", 
      "command": "sparc architect",
      "description": "System design and architecture planning"
    },
    "tdd": {
      "name": "Test-Driven Development",
      "command": "sparc tdd",
      "description": "Write tests first, then implementation"
    },
    "integration": {
      "name": "Integration",
      "command": "sparc integration", 
      "description": "Component integration and testing"
    },
    "refactor": {
      "name": "Refactoring",
      "command": "sparc refactor",
      "description": "Code improvement and optimization"
    }
  },
  "config": {
    "enableSwarm": true,
    "enableNeural": true,
    "enableHooks": true,
    "autoSave": true
  }
}