# Jung Education App Environment Variables
# Copy this file to .env and update with your actual values

# ==================================================
# OpenAI Configuration (Required for AI Features)
# ==================================================
# Get your API key from: https://platform.openai.com/api-keys
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Use OPENAI_API_KEY for backend services
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Selection (default: gpt-4o-mini)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
REACT_APP_OPENAI_MODEL=gpt-4o-mini

# LLM Provider Selection ('openai' or 'mock')
# Use 'mock' for development/testing without API costs
LLM_PROVIDER=openai

# ==================================================
# Admin Configuration
# ==================================================
# Admin username (default: admin)
REACT_APP_ADMIN_USERNAME=admin

# Admin password hash (generated using PBKDF2)
# Default password: jungadmin123
# Generate new hash: node -e "const crypto = require('crypto'); const salt = 'your_salt'; const password = 'your_password'; console.log(crypto.pbkdf2Sync(password, salt, 100000, 64, 'sha512').toString('hex'));"
REACT_APP_ADMIN_PASSWORD_HASH=your_password_hash_here

# Salt for password hashing (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
REACT_APP_ADMIN_SALT=your_salt_here

# Session expiry in milliseconds (default: 24 hours = 86400000)
REACT_APP_SESSION_EXPIRY=86400000

# ==================================================
# YouTube Integration (Optional)
# ==================================================
# YouTube Data API v3 Key for video features
# Get from: https://console.developers.google.com/
# IMPORTANT: Must use REACT_APP_ prefix for React to access it
REACT_APP_YOUTUBE_API_KEY=your_youtube_api_key_here

# ==================================================
# Development Settings
# ==================================================
# Environment mode
NODE_ENV=development

# Skip pre-flight checks (React Scripts)
SKIP_PREFLIGHT_CHECK=true

# Fast refresh (React Scripts)
FAST_REFRESH=true

# ==================================================
# Production Settings (Uncomment for production)
# ==================================================
# NODE_ENV=production
# GENERATE_SOURCEMAP=false
# REACT_APP_SESSION_EXPIRY=3600000

# ==================================================
# Security Notes
# ==================================================
# 1. Never commit real API keys to version control
# 2. Use different admin credentials in production
# 3. Generate new salt and password hash for production
# 4. Consider using environment-specific .env files (.env.local, .env.production)
# 5. Rotate API keys regularly